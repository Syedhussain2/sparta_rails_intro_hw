<p id="notice"><%= notice %></p>

<h1>People</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <h3><%= person.name %></h3>
      <h3><%= person.age %></h3>
      <h3><%= person.gender %></h3>
      <h4><%= link_to 'Show', person %></h4>
      <h4><%= link_to 'Edit', edit_person_path(person) %></h4>
      <h4><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></h4>

    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Person', new_person_path %>
